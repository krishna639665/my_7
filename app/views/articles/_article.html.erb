<div class="row mt-5">
  <% @articles.each do |article|%>
    <div class="col-md-4 mb-4">
      <div class="card card-main">
        <div class="view overlay">
          <%= image_tag ("img (67).jpg"), class: "card-img-top"%>
        </div>
        <div class="card-body">
          <h5 class="card-title">Created By: <%= article.user.username if article.user%></h5>
          <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-success"%></h5>
          <h5 class="card-text text-black"><%= truncate(article.description, length: 50)%></p>
          <%= link_to 'Show',  article_path(article),class: "btn btn-outline-success rounded-pill" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
