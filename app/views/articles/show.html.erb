<section id="cta" class="cta">
  <div class="container">
    <h3 class='text-center mb-4'> Showing Article Details </h3>
    <%= render 'layouts/messages'%>
    <%= link_to gravatar_for(@article.user, size: 150),user_path(@article.user)%>
    <table class="table table-striped table-bordered "  boder=1>
      <thead class="text-light">
        <tr>
          <th >Created By: </th>
          <th><%= @article.user.username if @article.user %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th class="text-light">Title</th>
          <th><%= simple_format(@article.title)%></th>
        </tr>
        <tr>
          <th class="text-white">Description</th>
          <th><%= simple_format(@article.description)%></th>
        </tr>
      </tbody>
    </table>
    <div class="row second">
      <div class="col-md-14 text-center mt-3">
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success mr-3"%>
        <%= button_to "Destroy", article_path(@article), method: :delete, confirm: "Are you sure?",
         class: "btn btn-outline-danger mr-3 mt-3"%>
        <%= link_to 'back', articles_path, class: "btn btn-outline-info mr-3 mt-3" %>
      </div>
    </div>
  </div>
</section>
