<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error',obj: @article %>
      <%= form_with(model: @article, local: true ) do |f|%>
        <div class="row mb-3 mt-4" >
          <%= f.label :title, class: "col-sm-2 col-form-label text-white fw-bold"%>
          <div class='col-sm-10'>
            <%= f.text_field :title, class:'form-control', placeholder:'Title of article'%>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 col-form-label text-white fw-bold"%>
          <div class='col-sm-10'>
            <%= f.text_area :description, rows:10, class:'form-control', placeholder: 'Description of article'%>
          </div>
        </div>
        <div  class="text-center mb-3 mt-4 ">
          <%= f.submit class: "btn btn-outline-success btn-lg"%>
        </div>
      <%end%>
    </div>
  </div>
  <div class="form-btn">
    <%= link_to 'cancel', articles_path, class: "btn btn-outline-info rounded-pill" %>
  </div>
</div>
