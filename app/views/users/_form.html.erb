<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error',obj: @user %>
      <%= form_with(model: @user, local: true ) do |f|%>
        <div class="row mb-3 mt-4" >
          <%= f.label :username, class: "col-sm-2 col-form-label text-white fw-bold"%>
          <div class='col-sm-10'>
            <%= f.text_field :username, class:'form-control', placeholder:'Enter username'%>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :email, class: "col-sm-2 col-form-label text-white fw-bold"%>
          <div class='col-sm-10'>
            <%= f.email_field :email, class:'form-control', placeholder: 'Enter your email'%>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label text-white fw-bold"%>
          <div class='col-sm-10'>
            <%= f.password_field :password, class:'form-control', placeholder: 'choose a password'%>
          </div>
        </div>
        <div  class="text-center mb-3 mt-4 ">
          <%= f.submit(@user.new_record? ? "signup" : "Update account", class: "btn btn-outline-success btn-lg" )%>
        </div>
      <%end%>
    </div>
  </div>
</div>
