<section id="cta" class="cta">
  <div class="container">
    <%= render 'layouts/messages'%>
    <div class="text-center mb-4">
      <h3><%= @user.username %>'s profile</h3>
      <%= gravatar_for @user, size: 200 %>
      <%= link_to 'Edit profile',  edit_user_path(@user), class: "btn btn-outline-success rounded-pill mt-4" %>
      <%= link_to 'cancel', users_path, class: "btn btn-outline-info rounded-pill mt-4" %>
      <h3 class="mt-4">Articles</h3>
    </div>
    <%= render 'articles/article' %>
  </div>
</section>
